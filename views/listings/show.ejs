<% layout('/listings/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-4">
    <h1> Listing Details</h1>
    <div class="card col-6 show-card" style="width: 18rem;">
        <img src="<%= listing.image %>" class="card-img-top show-img mt-2" alt="listing_image">
        <div class="card-body">
          <p class="card-text mt-2"> <b><%= listing.name %> </b><br>
            <%= listing.age %> <br>
            <%= listing.phone %> <br>
            <%= listing.location %> <br>
            <%= listing.country %>
        </p>
        </div>
      </div>
      <div class="row">
      <div class="col-md-4">
    <form method="GET" action="/listings/<%= listing._id %>/edit">
        <button class="btn btn-dark add-btn "> Edit </button>
    </form>
</div>
   <div class="col-md-4">
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-dark add-btn mb-3"> Delete </button>
    </form>
</div>
</div>
</div>
</div>

</body>
</html>
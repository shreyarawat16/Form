<% layout('/listings/layouts/boilerplate') -%>
<body>
    
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
        
            <h2> Create a new Form </h2>
    <form method="POST" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="name" class="form-label">Enter Name</label>
            <!-- listing is an  object and title is its key-->  
             <input required class="form-control" name="listing[name]" placeholder="Add a catchy name" type="text"> 
             <div class="valid-feedback">Name Looks good!</div>
             <div class="invalid-feedback">Please enter a valid name!</div>
            </div>
       
       
        <div class="mb-3">
        <label for="age" class="form-label">Enter age</label>
        <input required class="form-control" name="listing[age]" placeholder="Enter your age" type="number"> 
        <div class="invalid-feedback">Please enter a correct age!</div>  
        </div>

        <div class="mb-3">
         <label for="phone" class="form-label">Enter phone no.</label>
         <input required class="form-control"  name="listing[phone]" placeholder="Enter your phone number" type="number"> 
        <div class="invalid-feedback">PLease enter a valid phone number!</div>
        <div class="valid-feedback">Phone number looks good!</div>
        </div>

     <div class="row">
        <div class="mb-3 col-md-4">
         <label for="location" class="form-label">Enter Location</label>
         <input required class="form-control"  name="listing[location]" placeholder="Dehradun" type="text"> 
        <div class="invalid-feedback">PLease enter a valid location name!</div>
        </div>

        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Enter country</label>
         <input required class="form-control" name="listing[country]" placeholder="India" type="text"> 
        <div class="invalid-feedback">Please enter a valid country name!</div>
        </div>
        
    </div>
         <button class="btn btn-dark mb-3 add-btn"> Submit </button>
    </form>
    </div>
</div>
</body>
</html>
<% layout('/listings/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
    <h2> Edit a new Listing </h2>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" class="needs-validation" novalidate>
        <!-- listing is an  object and title is its key-->  
        <div class="mb-3">
            <label for="name" class="form-label">Enter Name</label>
            <!-- listing is an  object and title is its key-->  
             <input required class="form-control" name="listing[name]" value="<%= listing.name %>" type="text"> 
             <div class="invalid-feedback">Enter a valid name!</div>
             <div class="valid-feedback">Name looks good!</div>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Enter age</label>
            <input required class="form-control" name="listing[age]" value="<%= listing.age %>" type="number"> 
            <div class="invalid-feedback">Enter a valid age!</div>   
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">Enter image url:</label>
        <input required class="form-control" name="listing[image]" value="<%= listing.image %>" type="text">
        </div>  

        <div class="mb-3">
             <label for="phone" class="form-label">Enter phone no.</label>
             <input required class="form-control"  name="listing[phone]" value="<%= listing.phone %>" type="number"> 
             <div class="invalid-feedback">Enter a valid phone number!</div>
            </div>
         <div class="row">
            <div class="mb-3 col-md-4">
             <label for="location" class="form-label">Enter Location</label>
             <input required class="form-control"  name="listing[location]" value="<%= listing.location %>" type="text"> 
            <div class="invalid-feedback">Enter a valid location name!</div>
            </div>
    
            <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter country</label>
             <input required class="form-control" name="listing[country]" value="<%= listing.country %>" type="text"> 
            <div class="invalid-feedback">Enter a valid country name!</div>
            </div>
        </div>
         <button class="mb-3 btn btn-dark add-btn"> Edit </button>
    </form>
</div>
</div>
<script src="/js/script.js"></script>
</body>
</html>